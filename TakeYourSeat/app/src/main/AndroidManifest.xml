<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anica.takeyourseat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="reviewer.activities.RegisterActivity"
            android:label="@string/register"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="reviewer.activities.HomePageActivity"
            android:label="@string/homePage"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="reviewer.activities.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="reviewer.activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="reviewer.activities.HomePageActivity" />
        </activity>
        <activity
            android:name="reviewer.activities.DetailActivity"
            android:label="@string/detail"
            android:parentActivityName="reviewer.activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="reviewer.activities.HomePageActivity" />
        </activity>
        <activity
            android:name="reviewer.activities.ProfileActivity"
            android:label="@string/nav_profile"
            android:parentActivityName="reviewer.activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="reviewer.activities.HomePageActivity" />
        </activity>
    </application>

</manifest>