<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="takeyourseat.activities.InviteFriendsActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/searchFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:textColorHint="@color/icons"
        android:drawableLeft="@drawable/action_search"
        android:hint="@string/searchFriends"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/listMyFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchFriends">

    </ListView>
</LinearLayout>