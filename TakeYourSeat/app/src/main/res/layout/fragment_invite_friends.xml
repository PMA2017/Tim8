<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="takeyourseat.fragments.InviteFriendsFragment">

    <EditText
        android:id="@+id/searchFriendsInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:drawableLeft="@drawable/action_search"
        android:hint="@string/searchFriends"
        android:textSize="20dp"/>
    <ListView
        android:id="@+id/listFriends"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_below="@+id/searchFriendsInvite"
        android:layout_weight="0.17"
        android:layout_above="@+id/next4">

    </ListView>

    <Button
        android:id="@+id/next4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:text="@string/next"
        android:textColor="@color/icons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
